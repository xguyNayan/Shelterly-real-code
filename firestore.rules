rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Allow authenticated users to read and write their own data
    match /users/{userId} {
      // Allow creation of user documents
      allow create: if request.auth != null;
      
      // Allow users to read and update their own data
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins to read and update any user
      allow read, update: if isAdmin();
      
      // Allow deletion only by admins
      allow delete: if isAdmin();
      
      // Analytics subcollection - allow users to write to their own analytics
      // and allow admins to read all analytics
      match /analytics/{sessionId} {
        // Users can write to their own analytics (authenticated or anonymous)
        allow create, update: if true; // Allow all writes to analytics for now
        
        // Users can read their own analytics
        allow read: if true; // Allow all reads to analytics for now
        
        // Admins can read and write any analytics
        allow read, write: if isAdmin();
      }
    }
    
    // PGs collection - public read access, write access for admins
    match /pgs/{pgId} {
      allow read: if true; // Allow public read access
      allow write: if isAdmin(); // Only admins can modify
    }

    // Callback Requests collection
    match /callbackRequests/{requestId} {
      // Allow anyone to create callback requests
      allow create: if true;
      
      // Allow users to read their own callback requests
      allow read: if request.auth != null && 
                  (resource.data.userId == request.auth.uid || 
                   !resource.data.userId);
      
      // Allow admins to read, update, and delete any callback request
      allow read, update, delete: if isAdmin();
    }
    
    // Visit Requests collection
    match /visitRequests/{requestId} {
      // Allow anyone to create visit requests
      allow create: if true;
      
      // Allow users to read their own visit requests
      allow read: if request.auth != null && 
                  (resource.data.userId == request.auth.uid || 
                   !resource.data.userId);
      
      // Allow admins to read, update, and delete any visit request
      allow read, update, delete: if isAdmin();
    }
    
    // Wishlists collection
    match /wishlists/{wishlistId} {
      // Allow authenticated users to create wishlist items
      allow create: if request.auth != null && 
                     request.resource.data.userId == request.auth.uid;
      
      // Allow users to read and delete their own wishlist items
      allow read: if request.auth != null && 
                  (resource.data.userId == request.auth.uid || isAdmin());
      
      allow delete: if request.auth != null && 
                    (resource.data.userId == request.auth.uid || isAdmin());
      
      // Allow admins to update wishlist items
      allow update: if isAdmin();
    }

    
    // Allow users to list their own wishlist items
    match /wishlists/{wishlistId} {
      allow list: if request.auth != null && 
                 request.query.limit <= 100 &&
                 request.query.filters[0].op == "=="  && 
                 request.query.filters[0].field == "userId" && 
                 request.query.filters[0].value == request.auth.uid;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Allow public read access to all reviews
      allow read: if true;
      
      // Allow authenticated users to create reviews
      allow create: if request.auth != null && 
                     request.resource.data.userId == request.auth.uid;
      
      // Allow users to update and delete their own reviews
      allow update, delete: if request.auth != null && 
                              resource.data.userId == request.auth.uid;
    }
    
    // Blog posts collection
    match /blogPosts/{postId} {
      // Allow public read access to all blog posts
      allow read: if true;
      
      // Allow admins to create, update, and delete blog posts
      allow create, update, delete: if isAdmin();
    }
    
    // Give admins full access to all collections
    match /{collection}/{document} {
      allow read, write: if isAdmin();
    }
    
    // Allow collection group queries for analytics by admins
    match /{path=**}/analytics/{analyticsId} {
      allow read: if isAdmin();
    }
    
    // Default deny for non-admins
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
